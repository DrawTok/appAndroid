<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_mainActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Main Activity"
        app:layout_constraintBottom_toTopOf="@id/btn_fragment_1"
        android:textSize="30sp"/>

    <Button
        android:onClick="AddFrameLayout"
        android:id="@+id/btn_fragment_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 1"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_fragment_2"
        app:layout_constraintTop_toBottomOf="@id/tv_mainActivity"/>

    <Button
        android:onClick="AddFrameLayout"
        android:id="@+id/btn_fragment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 2"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/btn_fragment_1"
        app:layout_constraintEnd_toStartOf="@id/btn_change_tvFragmentA"
        app:layout_constraintTop_toBottomOf="@id/tv_mainActivity"/>

    <Button
        android:id="@+id/btn_change_tvFragmentA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changeText"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/btn_fragment_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_mainActivity"/>

    <FrameLayout
        android:id="@+id/frameContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_fragment_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>