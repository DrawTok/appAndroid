<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".saveImageActivity">
    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Mô tả"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/imv_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_description"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="300dp"/>
    <ImageButton
        android:id="@+id/image_from_camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_from_folder"
        app:layout_constraintTop_toBottomOf="@id/imv_img"
        android:src="@drawable/ic_baseline_camera_alt_24"/>

    <ImageButton
        android:id="@+id/image_from_folder"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_from_camera"
        app:layout_constraintTop_toBottomOf="@id/imv_img"
        android:src="@drawable/ic_baseline_folder_24"/>

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Xác nhận"
        app:layout_constraintStart_toStartOf="@id/image_from_camera"
        app:layout_constraintEnd_toEndOf="@id/image_from_camera"
        app:layout_constraintTop_toBottomOf="@id/image_from_camera" />

    <Button
        android:id="@+id/btnRefuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Từ chối"
        app:layout_constraintStart_toStartOf="@id/image_from_folder"
        app:layout_constraintEnd_toEndOf="@id/image_from_folder"
        app:layout_constraintTop_toBottomOf="@id/image_from_folder" />

</androidx.constraintlayout.widget.ConstraintLayout>