<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4BC9D9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_help_50"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="50:50"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:background="@drawable/bg_help"/>

    <ImageView
        android:id="@+id/imv_help_reload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_cached_24"
        app:tint="@color/white"
        android:background="@drawable/bg_help"
        app:layout_constraintTop_toTopOf="@+id/tv_help_50"
        app:layout_constraintEnd_toStartOf="@id/tv_help_50"
        android:layout_marginEnd="15dp"/>

    <ImageView
        android:id="@+id/imv_help_people"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_people_alt_24"
        app:tint="@color/white"
        android:background="@drawable/bg_help"
        app:layout_constraintTop_toTopOf="@+id/imv_help_reload"
        app:layout_constraintEnd_toStartOf="@id/imv_help_reload"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_game"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_help_50"
        app:layout_constraintBottom_toTopOf="@id/tv_question"
        android:textColor="#E9564B"/>

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Question"
        android:background="@drawable/bg_blue_10"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        android:layout_marginTop="60dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"/>

    <TextView

        android:id="@+id/tv_num_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_question"
        app:layout_constraintBottom_toTopOf="@id/tv_question"
        app:layout_constraintStart_toStartOf="@id/tv_question"
        app:layout_constraintEnd_toEndOf="@id/tv_question"
        android:text="CÃ¢u 1"
        android:background="@drawable/bg_orange"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"/>

    <TextView
        android:id="@+id/tv_answer_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 1"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_blue"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_question"/>

    <TextView
        android:id="@+id/tv_answer_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 2"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_blue"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_1"/>

    <TextView
        android:id="@+id/tv_answer_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 3"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_blue"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_2"/>

    <TextView
        android:id="@+id/tv_answer_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Answer 4"
        android:textAlignment="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_blue"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_answer_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>